{
    "name": "job1",
    "host": "https://n.netease.com",
    "source": [
        {
            "type": "expression",
            "value": "https://n.netease.com/forum-74-{range}.html",
            "params": [
                {
                    "key": "range",
                    "type": "python",
                    "value": "range(1,3)"
                }
            ]
        },
        {
            "type": "url",
            "value": "https://n.netease.com/forum-main.html"
        }
    ],
    "filter": [
        {
            "type": "xpath",
            "value": "//table[@id='threadlisttableid']"
        }
    ],
    "target": [
        {
            "name": "subjob1",
            "source": [
                {
                    "type": "expression",
                    "value": "job1._target"
                }
            ],
            "filter": [
                {
                    "type": "xpath",
                    "value": "//tbody"
                },
                {
                    "type": "xpath",
                    "value": "/div[@class='xi2']/text()",
                    "expression": "{value} > 10"
                }
            ],
            "target": [
                {
                    "name": "href_page",
                    "source": [
                        {
                            "type": "expression",
                            "value": "job1.host + subjob1._target//a"
                        }
                    ],
                    "filter": [
                        {
                            "type": "xpath",
                            "value": "(//td[@class='t_f'])[1]/text()"
                        }
                    ]
                },
                {
                    "name": "title",
                    "source": [
                        {
                            "type": "html",
                            "value": "subjob1._target"
                        }
                    ],
                    "filter": [
                        {
                            "type": "xpath",
                            "value": "/div[@class='s xst']/text()"
                        }
                    ]
                }
            ],
            "storage": {
                "target": "mysql://root:@localhost:3306/database/table",
                "record": [
                    { 
                        "key": "主题", 
                        "value": {
                            "type": "expression",
                            "value": "title" 
                        }
                    },
                    { 
                        "key": "主贴", 
                        "value": {
                            "type": "expression",
                            "value": "href_page"
                        }
                    },
                    {
                        "key": "渠道",
                        "value": "逆水寒论坛"
                    }
                ]
            }
        }
    ]
}